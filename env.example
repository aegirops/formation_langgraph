# ============================================================================
# LLM Provider Configuration
# ============================================================================
# Choose your LLM provider: 'azure' or 'vllm'
LLM_PROVIDER=azure

# ============================================================================
# Azure OpenAI Configuration (when LLM_PROVIDER=azure)
# ============================================================================
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_API_VERSION=2025-01-01-preview
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4.1

# ============================================================================
# vLLM Configuration (when LLM_PROVIDER=vllm)
# ============================================================================
VLLM_MODEL=
# Base URL for the vLLM endpoint (e.g., https://your-endpoint.com/v1)
VLLM_BASE_URL=
# API Key/Bearer token for authentication
VLLM_API_KEY=

# ============================================================================
# Common LLM Settings (applies to all providers)
# ============================================================================
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=1000

# ============================================================================
# Agent Configuration
# ============================================================================
AGENT_NAME=simple_langgraph_agent
AGENT_VERSION=1.0.0

# ============================================================================
# Mock Data Configuration (JSON Strings - DO NOT COMMIT SENSITIVE DATA)
# ============================================================================
# Mock test data - JSON string with 'name' and 'log' fields
# To use: Uncomment and set your values, or leave empty to use defaults
# Example:
# MOCK_TEST_DATA={"name":"test_user_authentication","log":"Test passed: User authentication successful"}
MOCK_TEST_DATA=

# Mock file data - JSON string with 'name' and 'content' fields
# To use: Uncomment and set your values, or leave empty to use defaults
# Example:
# MOCK_FILE_DATA={"name":"auth_service.py","content":"def authenticate(user, password):\\n    return validate_credentials(user, password)"}
MOCK_FILE_DATA=

# ====
# LangSmith
# ====
LANGSMITH_TRACING=true
LANGSMITH_ENDPOINT=https://api.smith.langchain.com
LANGSMITH_API_KEY=
LANGSMITH_PROJECT=formation-langgraph
