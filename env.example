# ============================================================================
# LLM Provider Configuration
# ============================================================================
# Choose your LLM provider: 'azure' or 'vllm'
LLM_PROVIDER=azure

# ============================================================================
# Azure OpenAI Configuration (when LLM_PROVIDER=azure)
# ============================================================================
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_API_VERSION=2025-01-01-preview
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4.1

# ============================================================================
# vLLM Configuration (when LLM_PROVIDER=vllm)
# ============================================================================
VLLM_MODEL=
# Base URL for the vLLM endpoint (e.g., https://your-endpoint.com/v1)
VLLM_BASE_URL=
# API Key/Bearer token for authentication
VLLM_API_KEY=

# ============================================================================
# Common LLM Settings (applies to all providers)
# ============================================================================
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=1000

# ============================================================================
# Agent Configuration
# ============================================================================
AGENT_NAME=simple_langgraph_agent
AGENT_VERSION=1.0.0


# ====
# LangSmith
# ====
LANGSMITH_TRACING=true
LANGSMITH_ENDPOINT=https://api.smith.langchain.com
LANGSMITH_API_KEY=
LANGSMITH_PROJECT=formation-langgraph
